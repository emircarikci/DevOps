FROM jenkins/jenkins:lts

USER root
RUN apt-get update && apt-get install -y --no-install-recommends     git curl ca-certificates docker.io  && rm -rf /var/lib/apt/lists/*

# Optional: install docker compose plugin (v2) if not present on host bind
RUN mkdir -p /usr/lib/docker/cli-plugins  && curl -fsSL https://github.com/docker/compose/releases/download/v2.29.7/docker-compose-linux-x86_64     -o /usr/lib/docker/cli-plugins/docker-compose  && chmod +x /usr/lib/docker/cli-plugins/docker-compose

USER jenkins
